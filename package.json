{
  "name": "Obsidian Neovim",
  "version": "0.0.1",
  "description": "An RPC-based bridge between a headless Neovim and Obsidian",
  "main": "main.js",
  "scripts": {
    "dev": "node esbuild.config.mjs",
    "build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
    "version": "node version-bump.mjs && git add manifest.json versions.json",
    "typecheck": "tsc -noEmit -skipLibCheck",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose"
  },
  "keywords": [
    "obsidian",
    "neovim",
    "vim",
    "codemirror",
    "rpc",
    "plugin"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "neovim": "^5.4.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^16.11.6",
    "@typescript-eslint/eslint-plugin": "5.29.0",
    "@typescript-eslint/parser": "5.29.0",
    "builtin-modules": "3.3.0",
    "esbuild": "0.17.3",
    "jest": "^29.7.0",
    "obsidian": "latest",
    "ts-jest": "^29.1.2",
    "tslib": "2.4.0",
    "typescript": "4.7.4"
  },
  "esbuild": {
    "external": [
      "obsidian",
      "@codemirror/*",
      "fs",
      "path",
      "child_process",
      "os",
      "tty",
      "net"
    ],
    "platform": "node",
    "format": "cjs"
  }
}
